.container
  background-color: #F8F8F8
  padding-bottom: .6rem
  min-height: 100vh
  box-sizing: border-box
  .video
    width: 100%
    height: 3.75rem
    display: block
  .detail-box
    background-color: #fff
    padding: .13rem
    .datail-price
      font-size: .24rem
      font-family: Arial-BoldMT
      font-weight: bold
      color: #ED1731
      span
        font-size: .11rem
        font-family: PingFang-SC-Regular
        font-weight: 400
        color: #999999
        margin-left: .1rem
    .content
      margin-top: .1rem
      font-size: 15px
      font-family: PingFang-SC-Bold
      font-weight: bold
      color: #444444
      overflow: hidden
      text-overflow: ellipsis
      display: -webkit-box
      -webkit-line-clamp: 2
      -webkit-box-orient: vertical
  .detail-list-box
    margin-top: .1rem
    background-color: #fff
    padding: 0 .15rem
    h1
      font-size: .14rem
      font-family: PingFang-SC-Medium
      font-weight: 500
      color: #444444
      text-align: center
      padding: .15rem 0
    .detail-list
      p
        padding: .15rem 0
        border-bottom: .01rem solid #EAEAEA
        font-size: .14rem
        font-family: PingFang-SC-Regular
        font-weight: 400
        color: #888888
        i
          font-family: PingFang-SC-Medium
          font-weight: 500
          color: #444444
          font-style: normal
          margin-left: .1rem
    .detail-img-list
      padding-bottom: .1rem
      img
        display: block
        margin-bottom: .05rem
  .detail-position
    position: fixed
    bottom: 0
    left: 0
    right: 0
    height: .5rem
    padding: .05rem .1rem
    box-sizing: border-box
    width: 100%
    background-color: #fff
    border-top: .01rem solid #EAEAEA
    button
      height: .4rem
      line-height: .4rem
      border-radius: .05rem
      padding: 0 .3rem
      background-color: #46C596
      font-size: .13rem
      font-family: PingFang-SC-Bold
      font-weight: bold
      color: #fff
      display: block
      float: right
