.container{display:flex;flex-direction:column;height:100vh}.container .sort-head{height:.44rem;line-height:.44rem;position:relative;text-align:center;background:linear-gradient(0deg, #45c495 0%, #53d1a3 100%)}.container .sort-head span{font-size:.17rem;font-family:PingFang-SC-Bold;font-weight:bold;color:#FFF;display:block}.container .sort-head i{position:absolute;left:.1rem;top:calc(50% - (.25rem / 2));display:inline-block;width:.25rem;height:.25rem;background:url("../images/nav_icon_back@2x.png") center no-repeat;background-size:cover}.container .sort-body{flex:1;overflow:hidden;display:flex}.container .sort-body .sort-left{width:1rem;background-color:#F8F8F8;overflow-y:scroll}.container .sort-body .sort-left span{display:block;height:.5rem;line-height:.5rem;font-size:.14rem;font-family:PingFang-SC-Regular;font-weight:400;color:#444444;text-align:center;overflow:hidden;white-space:nowrap;text-overflow:ellipsis;width:100%}.container .sort-body .sort-left span.active{background-color:#fff;color:#50CFA0;font-weight:bold;position:relative}.container .sort-body .sort-left span.active:after{content:'';display:inline-block;position:absolute;left:0;top:calc(50% - (.15rem / 2));width:.04rem;height:.15rem;background-color:#50CFA0}.container .sort-body .sort-right{flex:1;overflow:hidden;padding:.18rem .17rem;display:flex;flex-wrap:wrap;align-content:start;overflow-y:scroll}.container .sort-body .sort-right a{margin-right:.15rem;margin-bottom:.1rem}.container .sort-body .sort-right a:nth-child(3n+3){margin-right:0}.container .sort-body .sort-right a .sort-item{width:.7rem}.container .sort-body .sort-right a .sort-item img{display:block;width:100%;height:.7rem}.container .sort-body .sort-right a .sort-item p{text-align:center;font-size:.12rem;font-family:PingFang-SC-Bold;font-weight:bold;color:#444444;margin-top:.05rem;text-overflow:ellipsis;width:100%;overflow:hidden;white-space:nowrap}
