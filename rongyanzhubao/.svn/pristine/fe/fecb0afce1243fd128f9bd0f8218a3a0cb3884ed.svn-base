package com.cn.jm.controller.base.system;

import java.util.Date;

import com.cn._gen.model.Suggest;
import com.cn.jm.core.JMConsts;
import com.cn.jm.core.utils.util.JMResult;
import com.cn.jm.core.web.controller.JMBaseSystemController;
import com.cn.jm.interceptor.SystemLoginInterceptor;
import com.cn.jm.service.JMSuggestService;
import com.cn.jm.web.core.router.JMRouterMapping;
import com.jfinal.aop.Before;
import com.jfinal.aop.Inject;
import com.jfinal.plugin.activerecord.Page;

/**
 * Generated by 广州小跑robot.
 */
@JMRouterMapping(url = SystemSuggestController.URL)
@Before(SystemLoginInterceptor.class)
public class SystemSuggestController extends JMBaseSystemController {
	
	public static final String PATH = JMConsts.base_view_url+"/system/base/suggest";
	static final String URL ="/system/suggest";
	private static final String ADD_URL = PATH + "/add.html";
	private static final String EDIT_URL = PATH + "/edit.html";
	private static final String PAGE_URL = PATH + "/page.html";

	@Inject
	JMSuggestService suggestService;
	
	
	public void index(){
		page();
	}

	public void page(){
		String keyword = getPara("keyword","");
		Integer id = getParaToInt("id");
		
		String startTime = getPara("startTime","");
		String endTime = getPara("endTime","");
		
		Integer pageNumber = getParaToInt(0, 1);
		Integer pageSize = JMConsts.pageSize;
		
		Page<Suggest> page = suggestService.page(pageNumber, pageSize, id, keyword, startTime, endTime);;
		
		setAttr("id", id);
		setAttr("keyword", keyword);
		setAttr("startTime", startTime);
		setAttr("endTime", endTime);
		setAttr("page", page);
		
		jump();
		render(PAGE_URL);
	}
	
	public void add(){
		setToken();
		
		setAttr("action", JMConsts.ACTION_ADD);
		setAttr("suggest", new Suggest());
		render(ADD_URL);
	}

	public void save(){
		Suggest suggest = getModel(Suggest.class);
		suggest.setCreateTime(new Date());
		if(suggestService.save(suggest)){
			JMResult.success(this, "添加成功");
		}else{
			JMResult.fail(this, "添加失败");
		}
	}
	
	public void edit(){
		setToken();
		int id = getParaToInt("id");
		
		setAttr("suggest", suggestService.selectById(id));
		render(EDIT_URL);
	}
	
	public void update(){
		Suggest suggest = getModel(Suggest.class);
		if(suggestService.update(suggest)){
			JMResult.success(this, "编辑成功");
		}else{
			JMResult.fail(this, "编辑失败");
		}
	}
	
	public void delete(){
		int id = getParaToInt("id");
		
		if (suggestService.deleteById(id)) {
			JMResult.success(this, "删除成功");
		}else {
			JMResult.fail(this, "删除失败");
		}
	}
	
	public void dels(){
		Integer[] ids = getParaValuesToInt("ids");
		if(ids != null){
			boolean result = suggestService.deleteByIds(ids);
			if (result) {
				JMResult.success(this, "删除成功");
			}else {
				JMResult.fail(this, "删除失败");
			}
		}else {
			JMResult.fail(this, "请选择需要删除的数据");
		}
	}

}