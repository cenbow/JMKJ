.container
  // background-color: #F8F8F8
  min-height: 100vh
  .search
    display: flex
    align-items: center
    background: linear-gradient(0deg,rgba(69,196,149,1) 0%,rgba(83,209,163,1) 100%)
    padding: .07rem .15rem
    .input
      flex: 1
      overflow: hidden
      height: .3rem
      border-radius: .15rem
      background-color: #fff
      display: flex
      align-items: center
      justify-content: center
      font-size: .13rem
      font-family: PingFang-SC-Regular
      font-weight: 400
      color: rgba(153,153,153,1)
      i
        width: .13rem
        height: .13rem
        margin-right: .05rem
        background: url('../images/home_icon_search@2x.png') center no-repeat
        background-size: cover
    a.icon
      width: .18rem
      height: .18rem
      margin-left: .1rem
      background: url('../images/mine_j06.png') center no-repeat
      background-size: cover
  .bg-img
    width: 100%
    height: 1.65rem
    background-repeat: no-repeat
    background-position: center
    background-size: cover
    position: relative
    .box
      position: absolute
      background-color: rgba(0,0,0,.5)
      bottom: 0
      left: 0
      right: 0
      padding: .05rem .2rem .1rem
      box-sizing: border-box
      width: 100%
      div
        &.title
          font-size: .14rem
          font-family: PingFang-SC-Bold
          font-weight: bold
          color: #FFFFFF
        &.btns
          margin-top: .1rem
          font-size: 0
          span
            border: .01rem solid #CCCCCC
            border-radius: .02rem
            font-size: .11rem
            font-family: PingFang-SC-Bold
            font-weight: bold
            color: #fff
            margin-right: .05rem
            padding: .01rem .03rem
  .tabs
    position: relative
    .tab
      display: flex
      align-items: center
      background-color: #F5F5F5
      span
        font-size: .14rem
        font-family: PingFang-SC-Bold
        font-weight: bold
        color: #333333
        flex: 1
        height: .57rem
        line-height: .57rem
        text-align: center
        &.active
          color: #46C596
    .line
      position: absolute
      bottom: .05rem
      width: 33.33%
      height: .03rem
      transition: all .5s
      left: 0
      div
        width: 30%
        height: 100%
        margin: 0 auto
        border-radius: .02rem
        background-color: #46C596
  .layer0
    background-color: #FFFFFF
    padding-top: .68rem
    p.icon
      width: 1.25rem
      height: 1.25rem
      margin: 0 auto
      background: url('../images/mine_j07.png') center no-repeat
      background-size: cover
    p.title
      text-align: center
      font-size: .15rem
      font-family: PingFang-SC-Medium
      font-weight: 500
      color: #666666
  .layer1
    background-color: #FFFFFF
    // display: none
    .item
      padding: 0 .15rem
      .title
        font-size: .13rem
        font-family: PingFang-SC-Bold
        font-weight: bold
        color: #999999
        padding: .1rem 0
      .video-list
        display: flex
        flex-wrap: wrap
        a
          margin-right: .15rem
          margin-bottom: .15rem
          &:nth-child(3n)
            margin-right: 0
          .video-item
            position: relative
            // display: inline-block
            width: 1.05rem
            height: 1.05rem
            border-radius: 0.05rem

            overflow: hidden

            img
              width: 100%
              height: 100%
            i.icon
              position: absolute
              left: calc(50% - (.25rem/2))
              top: calc(50% - (.25rem/2))
              display: inline-block
              width: .25rem
              height: .25rem
              background: url('../images/play_ic.png') center no-repeat
              background-size: cover
  .layer2
    padding: .15rem .11rem 0
    display: flex
    flex-wrap: wrap
    a
      margin-right: .12rem
      margin-bottom: .1rem
      &:nth-child(2n+2)
        margin-right: 0
      .item
        width: 1.7rem
        // display: inline-block
        border-radius: .05rem
        overflow: hidden
        background-color: #fff

        .img-box
          width: 100%
          height: 1.7rem
          position: relative
          img
            display: block
            width: 100%
            height: 100%
          i
            position: absolute
            left: 0
            right: 0
            top: 0
            bottom: 0
            margin: auto
            display: inline-block
            width: .25rem
            height: .25rem
            background: url('../images/play_ic.png') center no-repeat
            background-size: cover
        .box
          padding: .11rem
          p
            font-size: .13rem
            font-family: PingFang-SC-Regular
            font-weight: 400
            color: #444444
            display: -webkit-box
            -webkit-box-orient: vertical
            -webkit-line-clamp: 2
            overflow: hidden
            &:first-child
              min-height: .34rem
            span
              color: #ED1731
              font-weight: bold
              &:first-child
                font-size: .15rem
              &:last-child
                font-size: .2rem
  .layer3
    padding: .15rem .15rem 0
    background-color: #FFF
    // display: none
    .item
      position: relative
      margin-bottom: .1rem
      height: 2rem
      border-radius: .05rem
      overflow: hidden
      .bgimg
        width: 100%
        height: 100%
      .icon-state
        position: absolute
        top: .1rem
        right: .1rem
        display: inline-block
        width: .55rem
        height: .55rem
        background: url('../images/mine_j05.png') center no-repeat
        background-size: cover
      .icon-play
        position: absolute
        left: calc(50% - (.25rem/2))
        top: calc(50% - (.25rem/2))
        display: inline-block
        width: .25rem
        height: .25rem
        background: url('../images/play_ic.png') center no-repeat
        background-size: cover
      .title
        position: absolute
        bottom: .1rem
        left: 0
        right: 0
        padding: 0 .15rem
        box-sizing: border-box
        font-size: .14rem
        font-family: PingFang-SC-Bold
        font-weight: bold
        color: #FFFFFF
        width: 100%
        text-overflow: ellipsis
        white-space: nowrap
        overflow: hidden
