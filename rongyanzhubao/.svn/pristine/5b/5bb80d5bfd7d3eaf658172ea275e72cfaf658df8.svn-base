.container
  display: flex
  flex-direction: column
  height: 100vh
  .sort-head
    height: .44rem
    line-height: .44rem
    position: relative
    text-align: center
    background: linear-gradient(0deg,rgba(69,196,149,1) 0%,rgba(83,209,163,1) 100%)
    span
      font-size: .17rem
      font-family: PingFang-SC-Bold
      font-weight: bold
      color: #FFF
      display: block
    i
      position: absolute
      left: .1rem
      top: calc(50% - (.25rem / 2))
      display: inline-block
      width: .25rem
      height: .25rem
      background: url('../images/nav_icon_back@2x.png') center no-repeat
      background-size: cover
  .sort-body
    flex: 1
    overflow: hidden
    display: flex
    .sort-left
      width: 1rem
      background-color: #F8F8F8
      overflow-y: scroll
      span
        display: block
        height: .5rem
        line-height: .5rem
        font-size: .14rem
        font-family: PingFang-SC-Regular
        font-weight: 400
        color: #444444
        text-align: center
        overflow: hidden
        white-space: nowrap
        text-overflow: ellipsis
        width: 100%
        &.active
          background-color: #fff
          color: #50CFA0
          font-weight: bold
          position: relative
          &:after
            content: ''
            display: inline-block
            position: absolute
            left: 0
            top: calc(50% - (.15rem / 2))
            width: .04rem
            height: .15rem
            background-color: #50CFA0
    .sort-right
      flex: 1
      overflow: hidden
      padding: .18rem .17rem
      display: flex
      flex-wrap: wrap
      align-content: start
      overflow-y: scroll
      a
        margin-right: .15rem
        margin-bottom: .1rem
        &:nth-child(3n+3)
          margin-right: 0
        .sort-item
          width: .7rem
          img
            display: block
            width: 100%
            height: .7rem
          p
            text-align: center
            font-size: .12rem
            font-family: PingFang-SC-Bold
            font-weight: bold
            color: #444444
            margin-top: .05rem
            text-overflow: ellipsis
            width: 100%
            overflow: hidden
            white-space: nowrap
